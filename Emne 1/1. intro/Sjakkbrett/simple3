<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="simpleStyles.css">
</head>

<body>
    <div id="board">
    </div>

    <script>
        drawBoard();

        function drawBoard() {
            drawDoubleRow();
            drawDoubleRow();
            drawDoubleRow();
            drawDoubleRow();
        }



        function drawDoubleRow() {
            drawRowStartingLight();
            drawRowStartingDark();

        }

        function drawRowStartingLight() {
            drawLightCell();
            drawRowCore();
        }
        function drawRowStartingDark() {
            drawDarkCell();
            drawRowCore();
        }
        function drawRowCore() {
            drawLightCell();
            drawDarkCell();
            drawLightCell();
            drawDarkCell();
            drawLightCell();
            drawDarkCell();
            drawLightCell();
        }

        function drawDarkCell() {
            document.getElementById('board').innerHTML +=
             /*HTML*/`<div class="darkSquare"></div>
            `;
        }

        function drawLightCell() {
            document.getElementById('board').innerHTML += 
            /*HTML*/`<div class="lightSquare"></div>
            `;
        }
    </script>
</body>

</html>
